<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>icon</th>
      <th>nickname</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if users.exists? %>
      <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td>
          <%= link_to user_path(user.id) do %>
          <%= user.nickname %>
          <% end %>
        </td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
      </tr>
      <% end %>
    <% else %>
    <div class="offset-3">
      <p>ユーザーはいません</p>
    </div>
    <% end %>
  </tbody>
</table>