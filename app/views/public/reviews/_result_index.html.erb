<div class="container">
  <!--render呼び起こす際に「tag: @tag」追記-->
  <h5><%= tag.name %>の投稿一覧</h5>
  
  <!--render呼び起こす際に「tag_list: @tag_list」追記-->
  <% tag_list.each do |list| %>
    <%= link_to list.name, search_tag_path(tag_id: list.id) %>
    <%="(#{list.review.count})" %>
  <% end %>
  
  <% reviews.each do |review| %>
  <div class="card">
    <div class="card-body">
      <h6 class="card-title">
        <%= link_to review_path(review.id) do %>
          <%= review.title.truncate(20) %>
        <% end %>
      </h6>
    </div>
  </div>
  <% end %>
</div>