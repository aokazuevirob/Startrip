<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= render 'users/info', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <!--投稿詳細を表示する-->
      <h2 class="font-wight-normal mt-5 mb-5">投稿詳細</h2>
      <h4>投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></h4>
      <p class="text-right">
        <% if @review.user == current_user %>
        <%= link_to '編集する', edit_review_path(@review), class: "btn btn-sm btn-info edit_review_#{@review.id}" %>
        
      </p>
      <div class="row">
        <div class="col-md-4 justify-content-center d-block">
          <%= image_tag @review.get_travel_images(450, 350) %>
        </div>
        <div class="col-md-4 justify-content-center">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>訪問国</td>
                <td><%= @review.travel_country.name %></td>
              </tr>
              <tr>
                <td>訪問地域</td>
                <td><%= @review.area %></td>
              </tr>
              <tr>
                <td>おすすめ度</td>
                <td><%= @review.rate %></td>
              </tr>
              <tr>
                <td>出発国</td>
                <td><%= @review.departure_country %></td>
              </tr>
              <tr>
                <td>往復移動費</td>
                <td><%= @revire.travel_cost %></td>
              </tr>
              <tr>
                <td>宿泊費</td>
                <td><%= @review.accommodation_fee %></td>
              </tr>
              <tr>
                <td>宿泊日数</td>
                <td><%= @review.night %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
      <div class="row">
        <p class="caption"><%= @review.title %></p>
        <p><%= @review.body %></p>
      </div>
    </div>
  </div>
</div>