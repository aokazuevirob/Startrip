<% if review.bookmarked_by?(current_user) %>
  <%= link_to review_bookmarks_path(review), method: :delete, remote: true do %>
    <i class="fas fa-bookmark" aria-hidden="true" style="color: black;"></i>
  <% end %>
<% else %>
  <%= link_to review_bookmarks_path(review), method: :post, remote: true do %>
    <i class="far fa-bookmark" aria-hidden="true"></i>
  <% end %>
<% end %>