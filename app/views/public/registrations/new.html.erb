<div class="container">
  <div class="row">

    <div class="col-8 offset-2">
      <h3 class="bg-secondary text-white d-inline-block px-4">新規会員登録</h3>
    </div>

    <div class="col-8 offset-2">
      <table class="table table-borderless my-1">
        <tbody>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'layouts/errors', obj: @user %>
          <tr>
            <td><%= f.label :name, "氏名" %></td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", "placeholder" => "(姓)山田" %></td>
            <td><%= f.text_field :first_name, autocomplete: "first_name", "placeholder" => "(名)太郎" %></td>
          </tr>
          <tr>
            <td><%= f.label :nickname, "ニックネーム" %></td>
            <td><%= f.text_field :nickname, "placeholder" => "タロ助" %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td>
              <%= f.email_field :email, autocomplete: "email" %><br>
              <%= "sample@example.com" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :gender, "性別" %></td>
            <td>
              <%= f.radio_button :gender, User.genders.key(0) %>
              <%= f.label :gender, User.genders_i18n[:male] %>
              <%= f.radio_button :gender, User.genders.key(1) %>
              <%= f.label :gender, User.genders_i18n[:female] %>
              <%= f.radio_button :gender, User.genders.key(2) %>
              <%= f.label :gender, User.genders_i18n[:no_answer] %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :birth_date, "生年月日" %></td>
            <td><%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 15), default: Date.new(1990, 1, 1) %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success mx-2 px-5" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-8 offset-2">
      <h3 class="bg-secondary text-white d-inline-block px-4 my-5">既に登録済みの方</h3>
      <p class="ml-5"><%= link_to "こちら", new_user_session_path, class: "hover-link" %>からログインしてください。</p>
    </div>
  </div>
</div>