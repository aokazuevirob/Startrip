<div class="container">
  <h3 class="bg-secondary text-white d-inline-block px-4"><i class="fas fa-user dark-brown"></i> 新規会員登録</h3>

    <div class="mx-4 mt-3">
      <%= form_with model:@user, url: user_registration_path do |f| %>
      <%= render 'layouts/errors', obj: @user %>

      <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">氏名</label>
        <%= f.text_field :last_name, autofocus: true, "placeholder" => "(姓)山田" %>
        <%= f.text_field :first_name, "placeholder" => "(名)太郎" %>
      </div>

      <div class="form-group row">
        <label for="nickname" class="col-sm-3 col-form-label">ニックネーム</label>
        <%= f.text_field :nickname, "placeholder" => "タロ助" %>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
        <%= f.email_field :email, autocomplete: "email", "placeholder" => "sample@example.com", :size=>"42" %>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <label for="phone_number" class="col-sm-3 col-form-label">電話番号(ハイフンなし)</label>
        <%= f.text_field :phone_number, "placeholder" => "00012345678", :size=>"42" %>
      </div>

      <div class="form-group row">
        <label for="gender" class="col-sm-3 col-form-label">性別</label>
        <%= f.radio_button :gender, User.genders.key(0) %>
        <%= f.label :gender, User.genders_i18n[:male] %>
        <%= f.radio_button :gender, User.genders.key(1) %>
        <%= f.label :gender, User.genders_i18n[:female] %>
        <%= f.radio_button :gender, User.genders.key(2) %>
        <%= f.label :gender, User.genders_i18n[:no_answer] %>
      </div>

      <div class="form-group row">
        <label for="birth_date" class="col-sm-3 col-form-label">生年月日</label>
        <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 15), default: Date.new(1990, 1, 1) %>
      </div>

      <div class="actions mt-1">
        <label for="submit" class="col-sm-3 col-form-label"></label>
        <%= f.submit "新規登録", class: "btn btn-success px-5" %>
      </div>
      <% end %>
    </div>

    <div class="sign-up mt-3">
      <h5 class="bg-secondary text-white d-inline-block px-4 my-5"> 既に登録済みの方</h3>
      <p class="ml-5"><%= link_to "こちら", new_user_session_path, class: "hover-link" %> からログインしてください。</p>
    </div>
</div>