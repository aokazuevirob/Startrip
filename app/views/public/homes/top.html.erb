<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <p class="display-1", align="left">Your step</p>
      <p class="display-1", align="right">expands</p>
      <p class="display-1", align="left">the world</p>
      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <%= link_to 'ゲストログイン(閲覧用)', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
        <div class="row">
          <%= link_to 'L o g    i n', new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
        </div>
        <div class="row">
          <%= link_to 'S i g n    U p', new_user_registration_path, class: "btn btn-success btn-sm btn-block sign_up" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%= render 'public/maps/index' %>
</div>

<div class="container">
<h2 class="d-inline-block px-4 mb-2 bg-teal text-white">国名からジャンル検索</h2>
  <div class="row">
    <% @countries.each do |country| %>
      <div class="col-3">
        <%= link_to country_path(country), style: "color:black;" do %>
          <p><%= image_tag country.country_imag.variant(resize_to_fill: [200, 150]) %></p>
          <p class="ml-1"><%= country.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <p class="text-right mt-1">
    <%= link_to "国名一覧を表示>>", genres_path, class: "hover-link" %>
  </p>
</div>