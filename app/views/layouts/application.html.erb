<!DOCTYPE html>
<html>
  <head>
    <title>Startrip</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
        <%= render 'layouts/header_admin' %>
      <% elsif user_signed_in? %>
        <%= render 'layouts/header_user' %>
      <% else %>
        <%= render 'layouts/header_logout' %>
      <% end %>
    </header>

    <main class="pb-5">
      <div class="text-center" style="height: 30px;">
        <div id="flash-message" style="display: none;">
          <%= render 'layouts/flash_message' %>
        </div>
      </div>
      <%= yield %>
    </main>

    <footer class="text-center fixed-bottom brown mt-3 pt-1" style="height: 40px">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
