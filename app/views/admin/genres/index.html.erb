<div class="container">
  <div class="row d-flex font-weight-bold text-dark border-bottom border-dark">
    <h3>国名から探す</h3>
    <div class="col">
      <p class="d-md-flex justify-content-md-end">（※今回のPF製作ではリンクは未作成です。）</p>
    </div>
  </div>
  <div class="row d-flrx flex-wrap">
      <!--多段階カテゴリー(ancestry)-->
      <% @parents.each do |parent| %>
      <ul>
        <% parent.children.each do |child| %>
        <!--子要素、孫要素の表示-->
        <li class="mt-3 font-weight-bold border-bottom" style="font-size: 25px;"><%= "#{child.name}" %></li>
        <ul class="mt-2 ml-5" style="column-count: 2;">
          <% child.children.each do |grandchild| %>
          <li>
            <%= "#{grandchild.name}" %>
            <%#= link_to "#{grandchild.name}", genre_path(grandchild) %>
          </li>
          <% end %>
        </ul>
        <% end %>
      </ul>
      <% end %>
  </div>
</div>