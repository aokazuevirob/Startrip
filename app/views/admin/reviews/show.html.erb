<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'public/users/info', user: @user, users: @users %>
    </div>

    <div class="col-md-8 offset-1">
      <div class="row">
      <h4 class="font-wight-normal">投稿詳細</h4>
      <h7 class="offset-1">投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></h7>
      <p class="text-right offset-2">
          <%#= link_to '編集する', edit_admin_review_path(@review), class: "btn btn-sm btn-info edit_admin_review_#{@review.id}" %>
          <%= link_to '削除する', @review, method: :delete, data: {confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger destroy_review_#{@review.id}" %>
      </p>
      </div>
      <div class="row">
      <div class="col-md-5 justify-content-center d-block">
        <%= image_tag @review.get_travel_image(250, 250) %>
      </div>

    <div class"col-md-3 offset-1">
      <table class="table table-border">
        <tbody>
          <tr>
            <td>訪問国</td>
            <td><%= @review.travel_country.name %></td>
          </tr>
          <tr>
            <td>訪問地域</td>
            <td data-score=""><%= @review.area %></td>
          </tr>
          <tr>
            <td>おすすめ度</td>
            <td><%= render 'public/reviews/static_rate', review: @review %><%#= @review.rate %></td>
          </tr>
          <tr>
            <td>出発国</td>
            <td><%= @review.departure_country %></td>
          </tr>
          <tr>
            <td>往復移動費</td>
            <td><%= @review.travel_cost.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td>宿泊費</td>
            <td><%= @review.accommodation_fee.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>宿泊日数</td>
            <td><%= Review.nights_i18n[@review.night] %></td>
          </tr>
        </tbody>
      </table>
    </div>
    </div>

        <p class="caption"><%= @review.title %></p>
        <p><%= @review.body %></p>
    </div>
  </div>
</div>