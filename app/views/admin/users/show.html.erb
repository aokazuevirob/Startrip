<div class="container">
  <h3 class"mini-title"><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h3>

  <table class="my-3">
    <tr>
      <td style="hegiht: 50px; width: 200px">会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">氏名</td>
      <td><%= @user.last_name %><%= @user.first_name %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">ニックネーム</td>
      <td><%= @user.nickname %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">電話番号</td>
      <td><%= @user.phone_number %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">生年月日</td>
      <td><%= @user.birth_date %></td>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px">会員ステータス</td>
      <% if @user.is_deleted == true %>
        <td>退会</td>
      <% else %>
        <td>有効</td>
      <% end %>
    </tr>
    <tr>
      <td style="hegiht: 50px; width: 200px"></td>
      <td>
        <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success mr-3" %>
      </td>
    </tr>
  </table>
</div>