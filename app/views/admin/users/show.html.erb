<div class="container">
  <h3 class"mini-title"><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h3>

  <div class="row justify-content-center">
    <div class="col-8 offset-2">
      <table class="table my-5">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= @user.birth_date %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @user.is_deleted == true %>
            <td>退会</td>
          <% else %>
            <td>有効</td>
          <% end %>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success mr-3" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>