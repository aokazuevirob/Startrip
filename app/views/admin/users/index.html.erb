<div class="container">
  <div class="row border-bottom border-dark">
    <h3 class="mini-title">会員一覧</h3>
  </div>

  <table class="table table-hover table-inverse my-5">
    <thead class="table-info">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
          <%= user.last_name %><%= user.first_name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <% if user.is_deleted == true %>
          <td class="text-danger">退会</td>
        <% else %>
          <td class="text-success">有効</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="paginate d-flex justify-content-center">
    <%= paginate @users %>
  </div>
</div>